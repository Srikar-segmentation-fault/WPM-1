extends layout

block content
  .row
    .col-md-8.offset-md-2
      h1.text-center.mb-4 Login to TFI-24
      hr
      form(action="/login", method="post", role="form")
        .form-group.row
          label.col-md-4.col-form-label(for="email") Email Address
          .col-md-8
            input#email.form-control(type="email", name="email", placeholder="Enter your email")
        .form-group.row.mt-3
          label.col-md-4.col-form-label(for="password") Password
          .col-md-8
            input#password.form-control(type="password", name="password", placeholder="Enter your password")
        .form-group.row.mt-4
          .col-md-8.offset-md-4
            button.btn.btn-primary(type="submit") 
              i.fas.fa-sign-in-alt.mr-1
              |  Login
      .text-center.mt-4
        p Don't have an account? 
          a(href="/register") Sign up here

doctype html
html(lang='en')
  head
    meta(name='viewport', content='width=device-width, initial-scale=1.0', charset='utf-8')
    title TFI-24 - The 24 crafts for film industry digitally
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/all.min.css')
    link(rel='preconnect', href='https://fonts.googleapis.com')
    link(rel='preconnect', href='https://fonts.gstatic.com', crossorigin)
    link(href='https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap', rel='stylesheet')

    style.
      /* Improved Styling */
      body {
        background-color: #f0f2f5; /* A softer, modern background color */
        font-family: 'Poppins', sans-serif;
        margin: 0;
        padding-top: 80px; /* Increased top padding for better spacing */
        color: #333; /* Darker base text color for readability */
      }

      /* Navbar Enhancements */
      .navbar {
        background: #ffffff; /* Cleaner white background */
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.07);
        padding-top: 0.75rem;
        padding-bottom: 0.75rem;
      }
      .navbar-brand {
        font-weight: 700;
        color: #1a73e8 !important; /* Brighter, more modern blue */
        letter-spacing: 0.5px;
        transition: transform 0.2s ease-in-out;
      }
      .navbar-brand:hover {
        transform: scale(1.03); /* Subtle hover effect */
      }
      .navbar-nav .nav-link {
        color: #5f6368 !important; /* Softer text color for nav links */
        font-weight: 500;
        margin: 0 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
      }
      .navbar-nav .nav-link:hover, .navbar-nav .nav-link.active {
        background-color: #e8f0fe; /* Background highlight on hover */
        color: #1a73e8 !important;
      }
      
      /* Style for the Sign Up button in Navbar */
      .navbar-nav .nav-link.btn-primary {
        color: #ffffff !important;
      }
      .navbar-nav .nav-link.btn-primary:hover {
        color: #ffffff !important;
        background-color: #1a73e8; /* Keep background color consistent on hover */
        filter: brightness(90%); /* Darken slightly on hover */
      }

      /* Main Content Containerization */
      .content-wrapper {
        background: #ffffff;
        padding: 2.5rem; /* Generous padding for content */
        border-radius: 12px; /* Softer, rounded corners */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08); /* Deeper shadow for a "lifted" feel */
        margin-top: 2rem;
        border: 1px solid #e0e0e0; /* Subtle border */
      }

      /* Footer Styling */
      footer {
        background: transparent; /* Makes footer blend with the body background */
        text-align: center;
        padding: 2rem 0;
        margin-top: 3rem;
        font-size: 0.9rem;
        color: #6c757d; /* Softer footer text color */
        border-top: 1px solid #dee2e6; /* Clear separator line */
      }
      footer a {
        color: #1a73e8;
        text-decoration: none;
        font-weight: 500;
      }
      footer a:hover {
        text-decoration: underline;
      }

  body
    nav.navbar.fixed-top.navbar-expand-md.navbar-light
      .container
        a.navbar-brand(href='/') TFI-24
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarMain')
          span.navbar-toggler-icon
        #navbarMain.navbar-collapse.collapse
          ul.navbar-nav.ml-auto
            li.nav-item
              a.nav-link(href='/about/') 
                i.fas.fa-info-circle.mr-1
                |  About
            li.nav-item
              a.nav-link(href='/location-info/') 
                i.fas.fa-map-marked-alt.mr-1
                |  See Locations
            li.nav-item
              a.nav-link(href='/location-review-form/') 
                i.fas.fa-plus-circle.mr-1
                |  Add Review
            li.nav-item
              a.nav-link(href='/login')
                i.fas.fa-sign-in-alt.mr-1
                |  Login
            li.nav-item
              a.nav-link.btn.btn-primary(href='/register')
                i.fas.fa-user-plus.mr-1
                |  Sign Up


    //- Content is now wrapped for better containerization
    .container
      .content-wrapper
        block content

    footer.text-center.mt-5.py-4
      .container
        p &copy; #{new Date().getFullYear()} TFI-24. All rights reserved.

    script(src='/javascripts/jquery-3.5.1.slim.min.js')
    script(src='/javascripts/popper.min.js')
    script(src='/javascripts/bootstrap.min.js')

